<!-- Form to POST new messages -->
<div class="content-grid mdl-grid">
  <div class="mdl-cell mdl-cell--12-col">
    <form action="/messages" method="POST">
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input" type="text" id="add-name" name="UserName">
        <label class="mdl-textfield__label" for="add-name">What is your Name</label>
        </div>
        <div class="mdl-layout-spacer"></div>
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input" type="text" id="add-message" name="description">
        <label class="mdl-textfield__label" for="add-message">New message</label>
        </div>
      <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" type="submit">Submit</button>
    </form>
  </div>
</div>

{{!-- Current messages --}}
<ul class="messages-list content-grid mdl-grid">
  {{#each messages}}
  <li id="{{_id}}" class="mdl-card mdl-cell mdl-shadow--2dp">
    
    {{!-- Heading --}}
    <div class="mdl-card__title mdl-color--light-blue-700 mdl-color-text--white">
      <h2>
        <div class="mdl-card__title-text">{{UserName}}
      </h2>
   

    <div class="mdl-layout-spacer"></div>

    {{!-- Date --}}
    <div class="mdl-card__supporting-text">
      Since {{formatCreatedAt}}
      {{description}}
    </div>
    
    {{!-- Controls --}}
    <div class="mdl-card__actions mdl-card--border">
      <button class="mdl-button mdl-js-button mdl-button--colored delete"><i class="material-icons">delete</i></button>
    </div>
     </div>
  </li>
  {{/each}}
</ul>
